[sub_resource type="GDScript" id="GDScript_dcy28"]
script/source = "extends Node

@onready var quest_text = $\"../Objectif/text\"


@onready var v_box_container = $\"../VBoxContainer\"
var quest_conditon : Array[String]
@onready var quest_condition_prefab = preload(\"res://12_INVENTORY/Book/Quest_prefab/Quest_condition.tscn\")



func _set_quest(_text : String, _conditions : Array[String]):
	
	var child = v_box_container.get_children()
	for e in child:
		e.queue_free() 
	
	quest_text.text = _text
	
	for e in _conditions:	
		var new_node = quest_condition_prefab.instantiate()
		v_box_container.add_child(new_node)
		
		var set_condition_text = new_node.get_node_or_null(\"set_condition\")
		if set_condition_text:
			set_condition_text._set_condition(e)


"

